/*Componente NEWS*/

.News
	margin-top 4em
	text-align center
	
	&-title
		text-transform uppercase
		font-size 1.6em
	
	&-item
		max-width 346px
		margin 1em
		background-color $white
		display inline-block
		
	&-imageContainer
		margin 0
		
	&-image
		width 100%
		
	&-description
		text-align justify
		padding .7em
		margin 0
		font-size 1.1em
	
	&-button
		background-color $lima
		color $white
		text-transform uppercase
		border none
		padding .2em 1.2em
		font-size 1.6rem
	
/*Tablet*/
@media (min-width: 32.5em) and (max-width: 768px)
	.News		
		
		&-list
			display flex
			flex-flow row wrap
			justify-content center
			
		&-item
			width 40%

@media (min-width: 768px)
	.News
		margin-top 5em
		
		&-list
			display flex
			flex-flow row wrap
			justify-content center
		
		&-item
			width 30%