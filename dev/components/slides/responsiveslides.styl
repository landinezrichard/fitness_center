* Estilos controles
*/

/*

  _nav --> es para los controles flechas: "prev - next"

*/
.rslides_nav {
  z-index: 3;
  position: absolute;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
  top: 50%;
  left: 15px;
  opacity: 0.7;
  // text-indent: -9999px;
  overflow: hidden;
  text-decoration: none;
  height: 64px;
  width: 64px;
  //background: transparent url("themes.gif") no-repeat left top;
  background-color: $lima;
  margin-top: -45px;
  text-align: center;
  font-size: 3em;
  color: $white;
  line-height: 4rem;
  }

.rslides_nav:active {
  opacity: 1.0;
  }

.rslides_nav.next {
  left: auto;
  background-position: right top;
  right: 15px;
  }

.transparent-btns_nav {
  z-index: 3;
  position: absolute;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
  top: 0;
  left: 0;
  display: block;
  background: #fff; /* Fix for IE6-9 */
  opacity: 0;
  //filter: alpha(opacity=1);
  width: 48%;
  // text-indent: -9999px;
  overflow: hidden;
  height: 91%;
  }

.transparent-btns_nav.next {
  left: auto;
  right: 0;
  }

.large-btns_nav {
  z-index: 3;
  position: absolute;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
  opacity: 0.6;
  text-indent: -9999px;
  overflow: hidden;
  top: 0;
  bottom: 0;
  left: 0;
  // background: #000 url("themes.gif") no-repeat left 50%;
  background-color: $lima;
  width: 38px;
  }

.large-btns_nav:active {
  opacity: 1.0;
  }

.large-btns_nav.next {
  left: auto;
  background-position: right 50%;
  right: 0;
  }

.rslides_nav:focus,
.transparent-btns_nav:focus,
.large-btns_nav:focus {
  outline: none;
  }

